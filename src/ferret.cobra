@args -pkg:gtk-sharp-2.0

# Ferret implemented in Cobra

use Gtk

class Ferret
	def main
		if CobraCore.commandLineArgs.count == 1
			Application.init
			window = FerretWindow()
			window.showAll
			Application.run

		else
			task = Documents()

			for arg in CobraCore.commandLineArgs[1:]
				task.add(arg)

			task.run

			for i in 0 : task.numDocuments-1
				for j in i+1 : task.numDocuments
					print '[task.docName(i)], [task.docName(j)], [task.computeResemblance(i, j)]'
